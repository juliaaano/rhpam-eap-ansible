  <servers>
    {% if rhdm_central_maven_jboss_enterprise_repo_pwd is defined and rhdm_central_maven_jboss_enterprise_repo_usr is defined %}
    <server>
      <id>jboss-enterprise-maven-repository</id>
      <username>{{ rhdm_central_maven_jboss_enterprise_repo_usr }}</username>
      <password>{{ rhdm_central_maven_jboss_enterprise_repo_pwd }}</password>
    </server>
    {% endif %}
    {% if rhdm_central_maven_local_repo_usr is defined and rhdm_central_maven_local_repo_pwd is defined %}
    <server>
      <id>local-repository</id>
      <username>{{ rhdm_central_maven_local_repo_usr }}</username>
      <password>{{ rhdm_central_maven_local_repo_pwd }}</password>
    </server>
    {% endif %}
  </servers>

  <mirrors>
    {% if rhdm_central_maven_mirror_central_repo_url is defined %}
    <mirror>
      <id>central-mirror</id>
      <name>Maven Central Mirror</name>
      <url>{{ rhdm_central_maven_mirror_central_repo_url }}</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
    {% endif %}
  </mirrors>

  <profiles>

    <!-- Configure the JBoss Enterprise Maven repository -->
    <profile>
      <id>jboss-enterprise-maven-repository</id>
      <repositories>
        <repository>
          <id>jboss-enterprise-maven-repository</id>
          <url>{{ rhdm_central_maven_jboss_enterprise_repo_url }}</url>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>daily</updatePolicy>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
      <pluginRepositories>
        <pluginRepository>
          <id>jboss-enterprise-maven-repository</id>
          <url>{{ rhdm_central_maven_jboss_enterprise_repo_url }}</url>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>daily</updatePolicy>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
    </profile>

    <!-- Configure a local Maven repository -->
    <profile>
      <id>local-repository</id>
      <repositories>
        <repository>
          <id>local-repository</id>
          <url>{{ rhdm_central_maven_local_repo_url | default('empty') }}</url>
          <releases>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </releases>
          <snapshots>
            <enabled>true</enabled>
            <updatePolicy>always</updatePolicy>
          </snapshots>
        </repository>
      </repositories>
    </profile>

  </profiles>

  <activeProfiles>
    <activeProfile>jboss-enterprise-maven-repository</activeProfile>
    {% if rhdm_central_maven_local_repo_url is defined %}
    <activeProfile>local-repository</activeProfile>
    {% endif %}
  </activeProfiles>

</settings>